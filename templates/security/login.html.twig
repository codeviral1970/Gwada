{% extends 'base.html.twig' %}

{% block title %}Gwada | Connexion
{% endblock %}

{% block body %}
	<div class="flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
		<div class="w-full max-w-md space-y-8">
			<div>
				<h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-theme-color">Gwada excurssion</h2>
				<p class="mt-2 text-center text-sm text-gray-600">
					Se connecter avec votre email et mot de passe

				</p>
			</div>
			<form class="mt-8 space-y-6" method="post">
				{% if error %}
					<div class="bg-red-100 border border-theme-color text-theme-color px-4 py-3 rounded relative" role="alert" id="alert">
						<span class="block sm:inline">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
						<span class="absolute top-0 bottom-0 right-0 px-4 py-3">
							<svg class="fill-current h-6 w-6 text-theme-color" role="button" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20">
								<title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
						</span>
					</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				{# <input type="hidden" name="remember" value="true"> #}
				<div class="-space-y-px rounded-md shadow-sm">
					<div class="mb-4">
						<label for="inputEmail" class="block text-gray-700 text-sm font-bold mb-2" for="username">
							Votre email
						</label>
						<input id="inputEmail" name="email" type="email" value="{{ last_username }}" autocomplete="email" required class="relative block w-full appearance-none rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" placeholder="Votre email">
					</div>
					<div class="mb-4">
						<label for="inputPassword" class="block text-gray-700 text-sm font-bold mb-2" for="username">
							Votre mot de passe 
						</label>
						<input id="inputPassword" name="password" type="password" autocomplete="current-password" required class="relative block w-full appearance-none rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" placeholder="Votre mot de passe">

					</div>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div>
					<button type="submit" class="group relative flex w-full justify-center rounded-md border border-transparent bg-theme-color py-2 px-4 text-sm font-medium text-white hover:bg-theme-color focus:outline-none focus:ring-2 focus:ring-theme-color focus:ring-offset-2">
						<span
							class="absolute inset-y-0 left-0 flex items-center pl-3">
							<!-- Heroicon name: mini/lock-closed -->
							<svg class="h-5 w-5 text-white group-hover:text-gray-400" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20" fill="currentColor" aria-hidden="true">
								<path fill-rule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clip-rule="evenodd"/>
							</svg>
						</span>
						Sign in
					</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
