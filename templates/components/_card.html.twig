{% if bestServices %}
<div class="mx-auto px-2">
  <div class="text-center py-6">
    <h2 class="text-xl lg:text-3xl font-bold text-color-gradient">Meilleurs excursions du moment</h2>
  </div>
  <div class="flex flex-wrap -mx-1 lg:-mx-4">
    <!-- Column -->
    {% for bestService in bestServices %}
    <div class="my-3 px-4 md:w-xl md:w-1/3 lg:my-4 lg:px-2 lg:w-1/4">
      <!-- Article -->
      <article class="bg-white overflow-hidden rounded-lg shadow-lg">

        <a href="{{path('app_services_show', {'slug': bestService.slug}) }}">
          <img src="{{ vich_uploader_asset(bestService,'imageFile')| imagine_filter('best') }}" loading="lazy"
            alt="{{bestService.name}}" class="w-full" />
        </a>

        <div class="p-4">
          <h5 class="text-secondary text-xl font-medium mb-2">{{bestService.name}}</h5>
          <div class="text-skin-muted text-base text-justify mb-4">
            {{bestService.description | u.truncate(100, '...')| raw }}
          </div>
        </div>
        <div class="pt-3 text-center">
          <a href="{{path('app_services_show', {'slug': bestService.slug}) }}">
            <button type="button" class=" btn-gradient">Plus
              info</button>
          </a>
        </div>
      </article>
      <!-- END Article -->
    </div>
    {% endfor %}
    <!-- END Column -->
  </div>
</div>
{% endif %}