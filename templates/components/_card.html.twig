{% if bestServices %}
<div class="container my-12 mx-auto px-4 md:px-12">
    <div class="text-center pb-6 text-theme-color text-2xl lg:text-3xl font-bold mb-4 md:mb-8 xl:mb-12">
        <h2>Meilleurs excursions du moment</h2>
    </div>
    <div class="flex flex-wrap -mx-1 lg:-mx-4">
        <!-- Column -->
        {% for bestService in bestServices %}
        {# {{dump(bestService)}} #}
        <div class="my-3 px-1 w-full md:w-1/3 lg:my-4 lg:px-2 lg:w-1/4">
            <!-- Article -->
            <article class="bg-white overflow-hidden rounded-lg shadow-lg">

                <a href="{{path('app_services_show', {'slug': bestService.slug}) }}">
                    <img src="{{ vich_uploader_asset(bestService,'imageFile')| imagine_filter('best') }}" loading="lazy" alt="{{bestService.name}}" class="w-full"/>
                </a>
                <div class="p-4">
                    <h5 class="text-gray-900 text-xl font-medium mb-2">{{bestService.name}}</h5>
                    <div class="text-primary text-base text-justify mb-4">
                       {{bestService.description | u.truncate(100, '...')| raw }}
                    </div>
                </div>
                <div class="pt-3 text-center">
                    <a href="{{path('app_services_show', {'slug': bestService.slug}) }}">
                        <button type="button" class=" inline-block px-6 py-2.5 bg-theme text-white font-medium text-xs leading-tight rounded shadow-md hover:bg-theme hover:shadow-lg focus:bg-theme focus:shadow-lg focus:outline-none focus:ring-0 active:shadow-lg transition duration-150 ease-in-out">Plus info</button>
                    </a>
                </div>
            </article>
            <!-- END Article -->
        </div>
        {% endfor %}
        <!-- END Column -->
    </div>
    {# <div class="pt-10 text-center">
        <button type="button" class=" inline-block px-6 py-2.5 bg-theme text-white font-medium text-xs leading-tight  rounded shadow-md hover:bg-theme hover:shadow-lg focus:bg-theme focus:shadow-lg focus:outline-none focus:ring-0 active:shadow-lg transition duration-150 ease-in-out">Voir les excursions</button>
    </div> #}
</div>
{% endif %}
