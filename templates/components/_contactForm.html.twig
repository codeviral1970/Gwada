<div class="text-center font-bold mt-10" id="success-message">
  {% for message in app.flashes('success') %}
  <div class="bg-gradient border-t border-primary rounded-b text-secondary px-4 py-3 shadow-md" role="alert">
    <div class="flex">
      <div>
        <p class="font-bold">{{ message }}</p>
      </div>
    </div>
  </div>
  {% endfor %}
</div>


