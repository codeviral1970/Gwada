<header class="bg-white z-50 sticky top-0 w-full shadow border-b">

  <nav id="main-nav" class="bg-white max-w-7xl mx-auto font-poppins px-6 py-6 flex items-center justify-between">

    <a href="{{path('app_home')}}" class="flex" aria-label="Page d'accueil du portfolio">
      <span aria-hidden="true" class="text-lg lg:text-xl">
        <strong>GWADA
          <span class="text-color-gradient">EXCURSION</span>
        </strong>
      </span>
    </a>
    <button aria-label="toggle button" aria-expanded="false" id="menu-btn" class="cursor-pointer w-7 md:hidden">
      <img src="{{asset('build/images/menu.svg')}}" alt="">
    </button>
    {% set current_path = app.request.get('_route') %}
    <ul id="toggled-menu"
      class="w-full absolute top-full left-0 -translate-y-full -z-10 text-gray-800 border-b border-gray-200 flex flex-col items-center md:static md:z-10 md:w-min md:transform-none md:border-none md:flex-row bg-white">
      <li class="py-4 md:py-0 md:mr-6 {% if current_path == 'app_home' %} text-color-gradient{% endif %}">
        <a href="{{path('app_home')}}" class="text-sm uppercase font-semibold w-full hover:text-neptune">Accueil
        </a>
      </li>
      <li class="py-2 md:py-0 md:mr-6 {% if current_path == 'app_about' %} text-color-gradient{% endif %}">
        <a href="{{path('app_about')}}" class="text-sm uppercase font-semibold w-full hover:text-neptune">Gwada
        </a>
      </li>
      <li class="py-4 md:py-0 md:mr-6 {% if current_path == 'app_services' %} text-color-gradient{% endif %}">
        <a href="{{path('app_services')}}" class="text-sm uppercase font-semibold w-full hover:text-neptune">Activites
        </a>
      </li>
      <li class="py-4 md:py-0 {% if current_path == 'app_contact' %} text-color-gradient{% endif %}">
        <a href="{{path('app_contact')}}" class="text-sm uppercase font-semibold w-full hover:text-neptune">Contact
        </a>
      </li>
    </ul>
  </nav>
</header>