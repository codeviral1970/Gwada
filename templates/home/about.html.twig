{% extends 'base.html.twig' %}

{% block title %}Gwada excursion | A propos
{% endblock %}

{% block body %}

<div class="py-6 sm:py-8 lg:py-12 ">
  <div class="max-w-screen-xl px-4 md:px-8 mx-auto">
    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      {% for about in abouts %}
      <div class="md:pt-1">
        <div class="h-64 md:h-auto text-primary overflow-hidden rounded-lg shadow-lg">
