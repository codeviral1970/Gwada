{% extends 'base.html.twig' %}

{% block title %}Gwada excursion | Accueil
{% endblock %}

{% block body %}

<!-- hero - start -->
<div class="pb-6 sm:pb-8">
  <div class=" w-full h-full">
    {% for img in homes %}
    <section
      class="min-h-96 flex justify-center items-center flex-1 shrink-0 bg-gray-100 overflow-hidden shadow-lg relative py-16 md:py-20 xl:py-48 bg-sea bg-fixed">

      <!-- image - start -->
      <img src="{{ vich_uploader_asset(img, 'imageFile')}}" loading="lazy" alt="{{img.imageName}}"
        class="w-full h-full object-cover object-center absolute inset-0" /><!-- image - end -->

      <!-- overlay - start -->
      <div class="bg-gray-500 mix-blend-multiply absolute inset-0"> </div>
      <!-- overlay - end -->

      <!-- text start -->
      <div class="sm:max-w-xl flex flex-col items-center relative">

        <h1 class="text-white text-2xl md:text-4xl font-bold text-center mb-8 md:mb-12 shadow-sm">
          GWADA
          <span class="text-color-gradient">EXCURSION</span>
        </h1>
        <p class="text-tertiary text-lg sm:text-xl text-center mb-4 md:mb-8">Partez explorer la Guadeloupe cl√© en main
        </p>

        <div class="w-full flex flex-col sm:flex-row sm:justify-center gap-2.5 max-w-xs">
          <a href="{{path('app_services')}}" class="btn-gradient-home">Voir
            les excursions</a>
        </div>
      </div>
      <!-- text end -->
    </section>
    {% endfor %}
  </div>
</div>
<!-- hero - end -->


<!-- gallery - start -->
<div class="max-w-6xl mx-auto">
  <div class="">
    {% for home in homes %}
    <div class="mb-10">
      <h2 class="text-color-gradient text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8 xl:mb-12">{{home.title}}
      </h2>

      <div class="p-4 text-lg text-secondary">{{home.description | raw}}</div>
    </div>
    {% endfor %}

    {% include "components/_excursion.html.twig" %}
  </div>
  <div class="max-w-screen-xl mx-auto">
    <div class="md:px-4 py-6 ">
      {% include "components/_card.html.twig" %}
    </div>
  </div>
</div>

<!-- gallery - end -->

{% endblock %}