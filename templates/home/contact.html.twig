{% extends "base.html.twig" %}

{% block title "Contact" %}

{% block body %}
	<div class="bg-white py-6 sm:py-8 lg:py-12">
		<div
			class="max-w-screen-2xl px-4 md:px-8 mx-auto">
			<!-- text - start -->
			{% for contact in contactDescription %}
				<div class="mb-10 md:mb-16">
					<h2 class="text-gray-500 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-6">{{contact.title}}</h2>
					<div>
						<div class="max-w-screen-lg text-gray-500 md:text-lg text-justify mx-auto leading-loose">
							{{contact.description | raw}}
						</div>
					</div>
				</div>
			{% endfor %}
			{% include "components/_contactForm.html.twig" %}
		</div>
	{% endblock %}
